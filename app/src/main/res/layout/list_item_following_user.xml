<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/following_clickable_cover"
    android:padding="@dimen/spacing_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        >
        <ImageView
            android:id="@+id/following_user_iamge"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/user_picture_placeholder"
            />
        <TextView
            android:id="@+id/following_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop = "@id/following_user_iamge"
            android:layout_toRightOf= "@id/following_user_iamge"
            android:text="shot Title"
            android:layout_marginRight="2dp"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/following_user_prescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/following_user_iamge"
            android:layout_toRightOf="@id/following_user_iamge"
            android:textStyle="italic"
            android:textSize="12dp"
            android:text="Peter"
            />
    </RelativeLayout>
    <!--<ImageView-->
        <!--android:layout_width="500dp"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colorChoice2PrimaryDark"-->
        <!--/>-->
</LinearLayout>
</android.support.v7.widget.CardView>